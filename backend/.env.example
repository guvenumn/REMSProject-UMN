# REMS Backend Environment Variables

# Server configuration
PORT=3002
NODE_ENV=development

# Database configuration (PostgreSQL)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/rems_db

# JWT configuration
JWT_SECRET=change_this_to_a_secure_secret
JWT_EXPIRES_IN=1d
JWT_REFRESH_EXPIRES_IN=7d

# File upload configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880  # 5MB in bytes

# CORS configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3002,http://127.0.0.1:3000
