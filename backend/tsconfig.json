{
  "compilerOptions": {
    /* Output Directory */
    "outDir": "./dist" /* Ensures compiled files go to 'dist' */,
    "rootDir": "./src" /* Ensures TypeScript compiles only files from 'src' */,

    /* Language and Environment */
    "target": "ES6" /* Set the JavaScript language version */,
    "module": "CommonJS" /* Ensures compatibility with Node.js */,
    "moduleResolution": "node" /* Ensures proper module resolution */,
    "allowSyntheticDefaultImports": true /* Allows default imports for non-ES modules */,
    "esModuleInterop": true /* Enables interop for CommonJS modules */,
    "resolveJsonModule": true /* Allows importing JSON files */,
    "forceConsistentCasingInFileNames": true /* Enforces consistent casing in filenames */,

    /* Type Checking */
    "strict": true /* Enable strict mode */,
    "noImplicitAny": true /* Enable error reporting for implicit 'any' */,
    "strictNullChecks": true /* Enable strict null checks */,
    "strictFunctionTypes": true /* Ensure function type compatibility */,
    "strictPropertyInitialization": true /* Check for uninitialized class properties */,
    "noImplicitReturns": true /* Report functions that do not explicitly return */,

    /* Type Definitions */
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ] /* Add path to custom type definitions */,

    /* Performance & Build Optimization */
    "skipLibCheck": true /* Skips type checking for declaration files */,
    "incremental": true /* Enables incremental builds */,
    "removeComments": true /* Removes comments in compiled output */
  },
  "include": [
    "src/**/*",
    "src/types/*.d.ts"
  ] /* Include type declaration files explicitly */,
  "exclude": [
    "node_modules",
    "dist"
  ] /* Excludes 'node_modules' and 'dist' from compilation */
}
